<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_csv_wizard_form" model="ir.ui.view">
        <field name="name">Importar CSV</field>
        <field name="model">ai_train_model.import.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <p><i class="fa fa-info-circle"/> Seleccione un archivo CSV para importar.</p>
                        <p>El archivo debe tener extensi√≥n .csv y estar codificado en UTF-8.</p>
                    </div>
                    <group>
                        <field name="descarga_id" invisible="1"/>
                        <field name="archivo_csv" filename="nombre_archivo" string="Archivo CSV" required="1"/>
                        <field name="nombre_archivo"/>
                    </group>
                    <footer>
                        <button name="action_importar" 
                                string="Importar" 
                                type="object" 
                                class="btn-primary"
                                data-hotkey="q"/>
                        <button string="Cancelar" 
                                class="btn-secondary" 
                                special="cancel"
                                data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
