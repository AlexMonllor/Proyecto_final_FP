<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="ai_train_model.verificador_ga4_list">
      <field name="name">Verificador GA4 Lista</field>
      <field name="model">ai_train_model.verificador_ga4</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="nombre_archivo"/>
          <field name="estado_verificacion"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="ai_train_model.verificador_ga4_form">
      <field name="name">Verificador GA4 Formulario</field>
      <field name="model">ai_train_model.verificador_ga4</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="verificar_permisos_ga4" 
                    string="Verificar Permisos GA4" 
                    type="object" 
                    class="oe_highlight"/>
          </header>
          <sheet>
            <group>
              <group>
                <field name="name" placeholder="Ej: VerificaciÃ³n GA4 - Proyecto Principal"/>
                <field name="archivo_credenciales" filename="nombre_archivo"/>
                <field name="nombre_archivo" invisible="1"/>
              </group>
              <group>
                <field name="estado_verificacion" colspan="2"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="ai_train_model.action_window">
      <field name="name">Verificador de Permisos GA4</field>
      <field name="res_model">ai_train_model.verificador_ga4</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
