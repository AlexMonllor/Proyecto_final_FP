    <!-- Top menu item -->

    <menuitem name="ai_train_model" id="ai_train_model.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Comprobar credenciales" id="ai_train_model.credential" parent="ai_train_model.menu_root" action="ai_train_model.action_window"/>
    <menuitem name="Entrenar modelo" id="ai_train_model.train_model" parent="ai_train_model.menu_root" action="ai_train_model.action_window"/>
    <menuitem name="Configurar entrenador de modelo" id="ai_train_model.config" parent="ai_train_model.menu_root" action="ai_train_model.action_window"/>

    <!-- actions -->
  </data>
</odoo>
